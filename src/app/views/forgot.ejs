<% script('/js/forgot.js') -%>
<% stylesheet('/css/forgot.css') -%>
<% title = '密码找回 | 跟风学' %>

<script type="template" id="email-part-tmpl">
  <div class="email-part">
    一份邮件已经发送至您的邮箱{{email}}，请登录邮箱点击重置密码连接
  </div>
</script>

<script type="template" id="mobile-part-tmpl">
  <div class="mobile-part">
    <div class="form-group">
      <input type="text" name="code" class="form-control input-lg code-input" id="code-input" placeholder="短信动态码">
      <a class="btn btn-primary btn-o get-code-btn btn-lg pull-right"
        id="get-code-btn">获取动态码</a>
      <div id="code-input-error" class="error-tip" style="display: none;">
      </div>
    </div>
    <div class="form-group">
      <input type="password" name="password" class="form-control input-lg password-input" id="password-input" placeholder="密码">
      <div id="password-input-error" class="error-tip" style="display: none;"></div>
    </div>
    <div class="form-group">
      <input type="password" name="confirmPassword" class="form-control input-lg confirm-password-input" id="confirm-password-input" placeholder="请再次输入密码">
      <div id="confirm-password-input-error" class="error-tip" style="display: none;">aaa</div>
    </div>
    <div>
      <button class="btn btn-danger btn-lg confirm-btn"
        id="confirm-btn"
        style="width: 100%; margin-top: 10px"
        type="submit">
        确定
      </button>
    </div>
  </div>
</script>

<div class="forgot">
  <% include partials/topBanner %>
  <div class="content">
    <form class="forgot-form" id="forgot-form" >
      <div class="form-group clearfix">
        <div class="forgot-title pull-left">密码找回</div>
      </div>
      <div class="account-part">
        <div class="form-group">
          <input type="text" name="account" class="form-control input-lg" placeholder="请输入邮箱或手机号" id="account-input">
          <div id="account-input-error" class="error-tip" style="display: none;"></div>
        </div>
        <div>
          <button class="btn btn-o btn-danger btn-lg next-btn"
            id="next-btn"
            style="width: 100%; margin-top: 10px"
            type="button">
            下一步
          </button>
        </div>
      </div>
    </form>
  </div>
  <div class="loading" style="display: none;">
  </div>
</div>
